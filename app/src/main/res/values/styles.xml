<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupInfoText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPopupText</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PopupButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/popup_button_background</item>
        <item name="android:textColor">@color/colorPopupText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_span">2</item>
        <item name="android:layout_weight">2</item>
    </style>

</resources>